<div class=" d-flex justify-content-center mt-5">
	<div class="col-6">
	  <div class="card bg-primary text-center card-form">
	    <div class="card-body">
	      <h3>New Aricle</h3>
	      <p>Go ahead and post your article</p>
	    <%= form_for(article, local: true) do |f| %>
	       <%= render 'shared/error', obj: article %>
	      <form>
	    	<div class="form-group">
					<%= f.text_field :title , class:"form-control form-control-lg" , placeholder:"Title" %>
				</div>
	      <div class="form-group">
					<%= f.text_area :description , class: "form-control form-control-lg" ,size: '50x10', placeholder: "Description" %>
	      </div>
				<div class="form-group">
					<%= f.file_field :image , class: " form-control-file" %>
			  </div>
	      <div class="form-group">
			    <%= collection_select(:article, :category_id, Category.all, :id, :name, {prompt: 'Please select article category'}, class: "form-control 0form-control-lg") %>
	      </div>
	      <%= f.submit class: "btn btn-outline-light btn-block" %>
	      </form>
		  <% end %> 
	    </div>
	  </div>
	</div>
</div>