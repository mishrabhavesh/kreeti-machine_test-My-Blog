
<div class="container">
  <div class="row justify-content-center mt-4">
    <div class="col-6">
      <div class="card bg-primary text-center card-form">
        <div class="card-body">
          <h3>Sign Up Today</h3>
          <p>please fill out this form</p>
          <%= form_with(model: user, local: true) do |form| %>
            <%= render 'shared/error', obj: @user %>
          <form>
            <div class="form-group">
              <%= form.text_field :email, class: "form-control form-control-lg" ,placeholder: "Email" %>
            </div>
            <div class="form-group">
              <%= form.password_field :password, class: "form-control form-control-lg", placeholder: "Password"%>
            </div>
            <div class="form-group">
              <%= collection_select(:user, :role_id, Role.all, :id, :role,{prompt: 'Please select role'},  {class: 'form-control  '}) %>
            </div>
            <%= form.submit :"Sign Up" ,class: "btn btn-outline-light btn-block"  %>
          </form>
        <% end %>
        </div>
      </div>
      <%= link_to 'Back', root_path, class: "btn btn-dark mt-4" %>
    </div>
  </div>
</div>