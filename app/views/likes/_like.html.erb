<% if  !article.is_liked(current_user).present? %>
<%= link_to article_likes_path(article), method: :post, remote: true do %>
<i id="like-<%= article.id %>"> <%= image_tag 'heart-dislike.png', height: '30', width: '30', class: 'empty-heart' %> </i>
<% end %>
<% else %>
<%= link_to like_path(article.is_liked(current_user).last.id), method: :delete, remote: true  do %>
	<i class="fa fa-heart fa-2x" aria-hidden="true"></i>
<% end %>
<% end %>
<strong class=" d-flex my-2 align-items-center justify-content-center"> <%= pluralize("#{article.likes.count}" , 'like' ) %> </strong>
